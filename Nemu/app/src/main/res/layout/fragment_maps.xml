<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/widget_horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <!-- Map Fragment -->
        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="1.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="1.0" />

        <!--        map widget -->
        <HorizontalScrollView
            android:id="@+id/scroll_widget_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:fillViewport="true"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintVertical_bias="1"
            >

            <LinearLayout
                android:id="@+id/place_widget_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/place_widget_container_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/floating_card_background"
                    android:minWidth="200dp"
                    android:minHeight="200dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:elevation="8dp"
                    android:clipToOutline="true"
                    android:layout_margin="4dp"
                    >

                    <ImageView
                        android:id="@+id/place_image_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        map:layout_constraintHeight_percent="0.7"
                        map:layout_constraintWidth_percent="0.9"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintTop_toTopOf="parent"
                        map:layout_constraintEnd_toEndOf="parent"
                        map:layout_constraintBottom_toTopOf="@id/place_name_1"
                        android:src="@drawable/place_1" />

                    <TextView
                        android:id="@+id/place_name_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        map:layout_constraintHeight_percent="0.1"
                        map:layout_constraintWidth_percent="0.9"
                        android:text="Place 1"
                        android:textSize="8sp"
                        map:layout_constraintBottom_toTopOf="@+id/place_address_1"
                        map:layout_constraintEnd_toEndOf="parent"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintTop_toBottomOf="@+id/place_image_1"
                        />

                    <TextView
                        android:id="@+id/place_address_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        map:layout_constraintHeight_percent="0.1"
                        map:layout_constraintWidth_percent="0.9"
                        android:text="Place Address 1"
                        android:textSize="6sp"
                        map:layout_constraintBottom_toTopOf="@+id/place_see_details_1"
                        map:layout_constraintEnd_toEndOf="parent"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintTop_toBottomOf="@+id/place_name_1"
                        />

                    <TextView
                        android:id="@+id/place_see_details_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        map:layout_constraintHeight_percent="0.1"
                        map:layout_constraintWidth_percent="0.9"
                        android:text="See details"
                        android:textSize="4sp"
                        map:layout_constraintBottom_toBottomOf="parent"
                        map:layout_constraintEnd_toEndOf="parent"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintTop_toBottomOf="@+id/place_address_1"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

