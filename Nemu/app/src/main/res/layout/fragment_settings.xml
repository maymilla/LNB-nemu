<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookingAddFragment"
    android:orientation="vertical">

    <!--    linear layout container for title : text "Add Booking" + back icon -->
    <LinearLayout
        android:id="@+id/booking_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat = "@drawable/back"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Settings"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

<!--    connected accounts container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connected_accounts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/rounded_shadow"
        >

<!--    text "Connected accounts"-->
        <TextView
            android:id="@+id/connected_accounts_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_percent="0.1"
            android:paddingHorizontal="20dp"

            android:text="Connected Accounts"
            android:textStyle="bold"
            android:textSize="15sp"

            app:layout_constraintTop_toTopOf="@id/connected_accounts_container"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/google_element"
            app:layout_constraintVertical_bias="0"
            />


<!--        google element -->
        <LinearLayout
            android:id="@+id/google_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_margin="20dp"

            app:layout_constraintTop_toBottomOf="@id/connected_accounts_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/boundary_horizontal_line"
            >

<!--            google container -->
            <LinearLayout
                android:id="@+id/google_element_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    app:srcCompat = "@drawable/google"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Connect Google Account"

                    />

                <Switch
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    />
            </LinearLayout>
        </LinearLayout>
<!--            boundary horizontal line -->
        <View
            android:id="@+id/boundary_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"

            app:layout_constraintTop_toBottomOf="@id/google_element"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/google_element_account_container"
            />

<!--                google account + manage access container -->
        <LinearLayout
            android:id="@+id/google_element_account_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="horizontal"
            android:layout_margin="20dp"

            app:layout_constraintTop_toBottomOf="@id/boundary_horizontal_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:text="noumisyifanabila@gmail.com"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="manage access"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>