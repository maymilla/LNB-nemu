<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <!-- Timeline dot -->
    <View
        android:id="@+id/timeline_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:background="@drawable/green_dot" />

    <!-- Connector line, aligned based on dot -->
    <View
        android:id="@+id/timeline_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_toStartOf="@id/timeline_dot"
        android:layout_centerVertical="true"
        android:background="#00C853" />

    <!-- Content section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/timeline_dot"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/photo_timeline"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/place_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/time_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08.00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="birmingham museum"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="jl. melati no.5"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
