<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookingFragment">


    <!--    linear layout container for title : text "Booking" + back icon -->
    <LinearLayout
        android:id="@+id/booking_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat = "@drawable/back"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Booking"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

<!--    active bookings -->
    <LinearLayout
        android:id="@+id/active_booking_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintVertical_bias="0"
        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@id/booking_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/history_booking_container"
        >

<!--        active text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:text="Active"
            android:textSize="15sp"

            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/booking_title"
            app:layout_constraintLeft_toLeftOf="@id/active_booking_container"
            app:layout_constraintRight_toRightOf="@id/active_booking_container"
            app:layout_constraintBottom_toTopOf="@id/history_booking_container"
            />

<!--        active booked list -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            >


            <!--            active booking element container 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                >

                <!--                image of place-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    app:srcCompat = "@drawable/place_1"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <!--                    name of place -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Birmingham palace"
                            />

                        <!-- date booked -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="12 Jan 2025"
                            />

                    </LinearLayout>

                    <!--                    address of place -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl. Melati No.5"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <!--            active booking element container 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                >

                <!--                image of place-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    app:srcCompat = "@drawable/place_1"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <!--                    name of place -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Birmingham palace"
                            />

                        <!-- date booked -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="12 Jan 2025"
                            />

                    </LinearLayout>

                    <!--                    address of place -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl. Melati No.5"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--        add new booking  -->
        <LinearLayout
            android:id="@+id/add_new_booking_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@id/active_booking_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/history_booking_container"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                app:srcCompat = "@drawable/plus"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Add new booking"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>

    <!--    history bookings -->
    <LinearLayout
        android:id="@+id/history_booking_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintVertical_bias="0"
        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@id/active_booking_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent
"
        >

        <!--        active text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:text="Active"
            android:textSize="15sp"

            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/booking_title"
            app:layout_constraintLeft_toLeftOf="@id/active_booking_container"
            app:layout_constraintRight_toRightOf="@id/active_booking_container"
            app:layout_constraintBottom_toTopOf="@id/history_booking_container"
            />

        <!--        active booked list -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            >


            <!--            active booking element container 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                >

                <!--                image of place-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    app:srcCompat = "@drawable/place_1"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <!--                    name of place -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Birmingham palace"
                            />

                        <!-- date booked -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="12 Jan 2025"
                            />

                    </LinearLayout>

                    <!--                    address of place -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl. Melati No.5"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <!--            active booking element container 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                >

                <!--                image of place-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    app:srcCompat = "@drawable/place_1"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        >

                        <!--                    name of place -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Birmingham palace"
                            />

                        <!-- date booked -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="12 Jan 2025"
                            />

                    </LinearLayout>

                    <!--                    address of place -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl. Melati No.5"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>