<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:padding="10dp"
    >

<!--    linear layout for title -->

        <!--    linear layout container for title : text "Profile" + back icon -->
        <LinearLayout
            android:id="@+id/profile_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="1"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                app:srcCompat = "@drawable/back"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Profile"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <!-- main profile   -->
        <LinearLayout
            android:id="@+id/main_profile_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_shadow"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintWidth_percent="1"
            android:padding="10dp"


            app:layout_constraintTop_toBottomOf="@id/profile_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0"
            >

<!--            profile photo -->
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.18"
                app:srcCompat = "@drawable/persona"
                android:layout_margin="10dp"
                />

<!--            name container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                >

                <!--                text name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Name"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="Noumisyifa Nabila"
                    />

            </LinearLayout>

            <!--            email container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                >

                <!--                text email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Email"
                    android:textSize="12sp"
                    />

<!--                email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="noumisyifanabila@gmail.com"
                    />

            </LinearLayout>

            <!--            date of birth container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                >

                <!--                text date of birth -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Date of Birth"
                    android:textSize="12sp"
                    />

                <!--                email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="14-14-2004"
                    />

            </LinearLayout>

            <!--            phone number container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                >

                <!--                text phone number -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Phone number"
                    android:textSize="12sp"
                    />

                <!--                phone number -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="08123456789"
                    />

            </LinearLayout>

            <!--            Nationality container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                >

                <!--                text nationality -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Nationality"
                    android:textSize="12sp"
                    />

                <!--                nationality -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="Indonesia"
                    />

            </LinearLayout>

            <!--            Gender container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                >

                <!--                text Gender -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Gender"
                    android:textSize="12sp"
                    />

                <!--                gender -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="Prefer not to say"
                    />

            </LinearLayout>

            <!--            button container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:gravity="end"
                >

                <!--                text Gender -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_shadow"
                    android:text="Edit"
                    android:layout_gravity="center"
                    />


            </LinearLayout>


        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>