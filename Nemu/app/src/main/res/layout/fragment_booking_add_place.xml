<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookingAddPlaceFragment"
    android:orientation="vertical">

    <!--    linear layout container for title : text "Add Booking" + back icon -->
    <LinearLayout
        android:id="@+id/booking_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat = "@drawable/back"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Add Booking"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

<!--    data container of the user to be inputted -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_shadow"
        android:layout_margin="10dp"
        >

<!--        place name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Birmingham Museum"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />

<!--        text "Visitor x details" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visitor 1 details"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            />

<!--        visitor name container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"            >

            <!--                text Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Name"
                android:textSize="12sp"
                />

            <!--                name  -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:hint="ex. Budi Hartono"
                />

        </LinearLayout>


        <!--        phone number container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"            >

            <!--                text phone number  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Phone Number"
                android:textSize="12sp"
                />

            <!--                phone number -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:hint="ex. 0812345678"
                />

        </LinearLayout>

        <!--        nationality container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            >

            <!--                text nationality  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Nationality"
                android:textSize="12sp"
                />

            <!--                phone number -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:hint="ex. Indonesia"
                />

        </LinearLayout>

<!--            add new visitor -->
        <LinearLayout
            android:id="@+id/add_new_visitor_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@id/active_booking_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/history_booking_container"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                app:srcCompat = "@drawable/plus"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Add new visitor"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                />

        </LinearLayout>

        <!--            button container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            >

            <!--                text Gender -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shadow"
                android:text="Book"
                android:layout_gravity="center"
                />


        </LinearLayout>

    </LinearLayout>




</LinearLayout>