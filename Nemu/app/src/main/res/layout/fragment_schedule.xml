<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment">

<!--    linear layout container for title : text "Add Schedule" + back icon -->
    <LinearLayout
        android:layout_width=""
        android:layout_height=""
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width=""
            android:layout_height=""
            />

        <TextView
            android:layout_width=""
            android:layout_height=""
            />
        
    </LinearLayout>

<!--    linear layout container for time range : container for start and end time + text "Select your time range"-->
    <LinearLayout
        android:layout_width=""
        android:layout_height=""
        android:orientation="horizontal"
        >

<!--        container for start time -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width=""
            android:layout_height=""
        >
<!--            start + time-->
            <TextView
                android:layout_width=""
                android:layout_height=""
                android:text="Start"
                />

            <Button
                android:id="@+id/btn_time_start"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/black"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

<!--       container for end time -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width=""
            android:layout_height=""
            >
            <!--            end + time-->
            <TextView
                android:layout_width=""
                android:layout_height=""
                android:text="End"
                />

            <Button
                android:id="@+id/btn_time_end"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/black"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    
<!--    grid container for places to visit : grid style + text "Pick the places you want to visit" -->
    <GridView
        android:id="@+id/places_to_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp" />



</LinearLayout>